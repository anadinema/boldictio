{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Boldictio API services",
    "description" : "Service exposing endpoint to server the frontend for the Boldictio dictionary application",
    "contact" : {
      "name" : "Anadi Nema",
      "url" : "https://anadinema.me/contact",
      "email" : "anadi.nema@outlook.com"
    },
    "license" : {
