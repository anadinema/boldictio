    },
    "version" : "1.0.0"
  },
  "servers" : [ {
    "url" : "http://52.140.122.55:8081",
    "description" : "Generated server url"
  } ],
  "tags" : [ {
    "name" : "Manage service",
    "description" : "Endpoints to manage and monitor health of the API"
  }, {
    "name" : "Dictionary endpoints",
    "description" : "All the endpoints for getting dictionary meaning and further details for any word"
  } ],
  "paths" : {
    "/v1/manage/health" : {
      "get" : {
        "tags" : [ "Manage service" ],
        "operationId" : "checkHealth",
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/HealthResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/dictionary/{word}" : {
      "get" : {
        "tags" : [ "Dictionary endpoints" ],
        "operationId" : "getDictionaryMeaning",
        "parameters" : [ {
          "name" : "word",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/BoldictioResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Details" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          },
          "status" : {
            "type" : "string"
          }
        }
      },
      "HealthResponse" : {
        "type" : "object",
        "properties" : {
          "status" : {
            "type" : "string"
          },
          "details" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Details"
            }
          }
        }
      },
      "BoldictioResponse" : {
        "type" : "object",
        "properties" : {
          "text" : {
            "$ref" : "#/components/schemas/Text"
          },
          "media" : {
            "$ref" : "#/components/schemas/Media"
          }
        }
      },
      "Definitions" : {
        "type" : "object",
        "properties" : {
          "definition" : {
            "type" : "string"
          },
          "synonyms" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          },
          "antonyms" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          },
          "example" : {
            "type" : "string"
          }
        }
      },
      "Image" : {
        "type" : "object",
        "properties" : {
          "heading" : {
            "type" : "string"
          },
          "uri" : {
            "type" : "string"
          }
        }
      },
      "Meanings" : {
        "type" : "object",
        "properties" : {
          "partOfSpeech" : {
            "type" : "string"
          },
          "definitions" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Definitions"
            }
          },
          "synonyms" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          },
          "antonyms" : {
            "type" : "array",
            "items" : {
              "type" : "string"
            }
          }
        }
      },
      "Media" : {
        "type" : "object",
        "properties" : {
          "image" : {
            "$ref" : "#/components/schemas/Image"
          },
          "pronunciation" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Pronunciation"
            }
          },
          "video" : {
            "$ref" : "#/components/schemas/Video"
          }
        }
      },
      "Pronunciation" : {
        "type" : "object",
        "properties" : {
          "heading" : {
            "type" : "string"
          },
          "uri" : {
            "type" : "string"
          }
        }
      },
      "Text" : {
        "type" : "object",
        "properties" : {
          "word" : {
            "type" : "string"
          },
          "meanings" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Meanings"
            }
          }
        }
      },
      "Video" : {
        "type" : "object",
        "properties" : {
          "heading" : {
            "type" : "string"
          },
          "uri" : {
            "type" : "string"
          }
        }
      }
    }
  }
}